<% layout('/layout') -%>

<% if (menu.current.path != 'events') { %>

  <div class="col s12 m12 l12">
    <table class="board-detail">
      <thead>
        <tr>
          <th><%= article.title %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="info right">
            <%= article.user.username %>
            <%= moment(article.created_at).format("llll") %>
            <%= article.__v %>
          </td>
        </tr>
        <tr>
          <td><%- article.body %></td>
        </tr>
    </table>

  </div>

<% } else { %>

  <div class="row">
    <div class="col s12 m8">
      <p><%= moment(article.event.begin_at).format("LLLL") %></p>
      <h5><%= article.title %></h5>
    </div>
    <div class="col s12 m4">
      <p><b>Are you going?</b> <small><%= article.event.attendee.length %> people going.</small></p>
      <div>
        <button class="btn btn-primary">âˆš</button>
        <button class="btn btn-primary">X</button>
      </div>
    </div>
    <div class="col s12">
      <p class="event-addr"><i class="material-icons">location_on</i> <%= article.event.address %> (<a href="https://www.google.com/maps/dir/<%= article.event.place.replace(' ', '+') %>" target="_map">map</a>)</p>
    </div>
    <!--
    <div class="col s12">
      <p>Attendee</p>
      <div>
        <div class="profile-image"><img src="/images/profile/1.jpg" alt="Admin"></div>
      </div>
    </div>
    -->
  </div>

  <div class="row">
    <div class="col s12">
      <%- article.body %>
    </div>
  </div>


<% } %>
