<% layout('/layout') -%>

<div>
  <form name="frm_post" method="post" action="<%= path %>" calss="">
    <div class="row">
      <div class="input-field col s12">
        <input id="title" name="title" type="text" class="validate" value="" required />
        <label for="title"><%= i18n.__('board.post.title') %></label>
      </div>

      <div class="input-field col s12">
        <textarea id="body" name="body" class="materialize-textarea" required></textarea>
        <label for="body"><%= i18n.__('board.post.content') %></label>
      </div>

      <div class="input-field col s12">
        <input id="tags" name="tags" type="text" required />
        <label for="tags"><%= i18n.__('board.post.tags') %></label>
      </div>

      <div class="input-field col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          <i class="material-icons left">send</i><%= i18n.__('board.post.submit') %>
        </button>
        <button class="btn" type="button" name="cancel">
          <i class="material-icons left">cancel</i><%= i18n.__('board.post.cancel') %>
        </button>
      </div>
    </div>
  </form>
</div>
